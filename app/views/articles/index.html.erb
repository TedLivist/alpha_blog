<div id="page-content">
  <h1 class="mt-4 text-center">List of all articles</h1>

  <div class="container">
    <% @articles.each do |article| %>
      <div class="row justify-content-md-center">
        <div class="col-8 mt-4">
          <div class="card text-center shadow mb-5 bg-white rounded">
            <div class="card-header font-italic">
              by Teddy Livingstone
            </div>
            <div class="card-body">
              <h5 class="card-title"><%= link_to article.title, article, class: "text-decoration-none" %></h5>
              <p class="card-text"><%= truncate(article.description, length: 50) %></p>
              <%= link_to 'View', article_path(article), class: "btn btn-success" %>
              <%= link_to 'Edit', edit_article_path(article), class: "btn btn-info" %>
              <%= link_to 'Delete', article_path(article), method: :delete, data: {confirm: "Are you sure you want to delete this article?"}, class: "btn btn-danger" %>
            </div>
            <div class="card-footer text-muted">
              <small>
                Created <%= time_ago_in_words(article.created_at) %> ago | Updated <%= time_ago_in_words(article.updated_at) %> ago              </small>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>