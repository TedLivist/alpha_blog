<h1 class="mt-4 text-center">Log in</h1>

<div class="container mt-4">

  <div class="row justify-content-center">
    <div class="col-12">
      <%= form_with(scope: :session, url: login_path, class: "shadow p-3 mb-4 rounded bg-secondary", local: true) do |f| %>

        <div class="form-group row">
          <%= f.label :email, class: "col-2 col-form-label text-white" %>
          <div class="col-10">
            <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email address" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :password, class: "col-2 col-form-label text-white" %>
          <div class="col-10">
            <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Enter your password" %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= f.submit "Log in", class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
    </div>
    
    <%= button_to 'Go to articles listing', articles_path, method: :get, class: "btn btn-primary btn-lg" %>

  </div>

</div>