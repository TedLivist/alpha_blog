<h1 class="mt-4 text-center">Create a new category</h1>
<div class="container mt-4">

  <%= render 'shared/errors', obj: @category %>

  <div class="row justify-content-center">
    <div class="col-12">
      <%= form_with(model: @category, class: "shadow p-3 mb-4 rounded bg-secondary", local: true) do |f| %>

        <div class="form-group row">
          <%= f.label :name, "Category name", class: "col-2 col-form-label text-white" %>
          <div class="col-10">
            <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a name" %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
    </div>
    
    <%= button_to 'Go to articles listing', articles_path, method: :get, class: "btn btn-primary btn-lg" %>

  </div>

</div>
